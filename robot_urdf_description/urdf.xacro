<?xml version="1.0"?>
<!-- http://wiki.ros.org/urdf/XML/link -->
<!-- using xacro for generating urdf file of the robot-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<!--setting material properties which will be used later-->
<xacro:include filename="inertia.xacro"/>
<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="orange">
    <color rgba="1 0.3 0.1 1"/>
</material>

<material name="blue">
    <color rgba="0.2 0.2 1 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<!--setting up the base link-->
<link name="base_link">
</link>

<!--joint name ="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="robot_chassis"/>
</joint-->

<!--setting up chassis link-->
<link name="robot_chassis">
    <visual>
        <origin xyz="0.15 0 0.075"/>
        <geometry>
            <box size="0.3 0.3 0.15"/>
        </geometry>
        <material name= "white"/>
    </visual>
    <collision>
        <origin xyz="0.15 0 0.075"/>
        <geometry>
            <box size="0.3 0.3 0.15"/>
        </geometry>
    </collision>
    <xacro:inertia_box mass="0.5" x="0.3" y="0.3" z="0.15">
        <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
    </xacro:inertia_box>
</link>

<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="robot_chassis"/>
    <origin xyz="-0.1 0 0"/>
</joint>

<!-- left wheel link-->

<link name="left_wheel">
    <visual>
        <!--origin xyz="0.15 0 0.075" rpy="0 0 0"/-->
        <geometry>
            <cylinder radius="0.05" length= "0.04"/>
        </geometry>
        <material name= "blue"/>
    </visual>
    <collision>
        <!--origin xyz="0.15 0 0.075"/-->
        <geometry>
            <cylinder radius="0.05" length= "0.04"/>
        </geometry>
    </collision>
    <xacro:inertia_of_cylinder mass="0.1" radius="0.05" length= "0.04">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertia_of_cylinder>
</link>

<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<!--right wheel link-->
<link name="right_wheel">
   <visual>
        <geometry>
            <cylinder radius="0.05" length="0.04"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <!--origin xyz="0.15 0 0.075"/-->
        <geometry>
            <cylinder radius="0.05" length= "0.04"/>
        </geometry>
    </collision>
    <xacro:inertia_of_cylinder mass="0.1" radius="0.05" length= "0.04">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertia_of_cylinder>
</link>

<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<!-- caster wheel link-->

<link name="caster_wheel">
    <visual>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        <material name="black"/>
    </visual>   
    <collision>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
    </collision> 
    <xacro:inertia_of_sphere mass="0.1" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertia_of_sphere>
</link>

<joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.14 0 0"/>
</joint>

</robot>


